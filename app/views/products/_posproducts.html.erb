<% @products.each do |product| %>
<div class="image_wrapper hastip"  data-item-id="<%=product.item_id%>"  title="<%=product.name%>">

<div style="color:#000;text-align:center;margin-bottom:50px;font-weight:bold;" class="cameraicon" data-item-id="<%=product.item_id%>"  data-title="<%= product.name %>" data-item-number="<%=product.item_number%>"></div>

<%= image_tag product.image_src , :class => "main_images", :id => product.item_id %>
<span style="color:#000;text-align:center;margin-bottom:50px;font-weight:bold;"><%= product.name %></span>


<table>



<tr style="background:#777;">
	<td>stk/bstk <br> <span style="font-size:12px;">
		<%=product.stock %> | <%=product.backstock %>
	</span></td>
		<td>Rt/Wh<br><%= product.cost_price%>|<%=product.unit_price %></td>
		<td>Mk%<br><%= (product.unit_price / product.cost_price).round(3) %></td>
	<td>#sold <br><%= product.sales %></td>
</tr>

<tr style="background:#777;">
	<td title="<%= product.last_order(false).strftime('%A %e %Y') unless product.last_order == 'NA' || product.last_order.blank? %>">L order <br><%= product.last_order  %></td>
		<td>min r <br><%= product.reorder_level %></td>
		<td title="<%= product.last_sale(false).strftime('%A %e %Y') unless product.last_sale == 'NA' || product.last_sale.blank? %>">l sold <br><%= product.last_sale%></td>
	<td>dst <br><%= product.distributor_name %></td>
</tr>

</table>

</div>
<% end %>


